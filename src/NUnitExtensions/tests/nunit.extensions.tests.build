<?xml version="1.0"?>
<project name="NUnitExtensionsTests" default="build" basedir=".">

  <patternset id="source-files">
    <include name="MaxTimeDecoratorTests.cs"/>
    <include name="RepeatedTestFixture.cs"/>
    <include name="RowTest/*.cs"/>
    <include name="RowTest/UnitTests/*.cs"/>
    <include name="XmlDiffFixture.cs"/>
  </patternset>

  <target name="build">
    <csc target="library" 
        output="${current.test.dir}/nunit.extensions.tests.dll"
        debug="${build.debug}" define="${build.defines}">
      <sources>
        <patternset refid="source-files"/>
        <include name="../../GeneratedAssemblyInfo.cs"/>
      </sources>
      <references>
        <include name="${current.lib.dir}/nunit.mocks.dll"/>
        <include name="${current.lib.dir}/nunit.framework.dll"/>
        <include name="${current.lib.dir}/nunit.framework.extensions.dll"/>
        <include name="${current.build.dir}/nunit.core.interfaces.dll"/>
        <include name="${current.build.dir}/nunit.core.dll"/>
        <include name="${current.build.dir}/nunit.core.extensions.dll"/>
        <include name="${current.test.dir}/nunit.core.tests.dll"/>
        <include name="${current.test.dir}/test-assembly.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/NUnitExtensions/tests">
      <fileset>
        <patternset refid="source-files"/>
        <include name="nunit.extensions.tests.build"/>
      </fileset>
    </copy>
  </target>

</project>