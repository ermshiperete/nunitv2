<?xml version="1.0"?>
<project name="NUnitFrameworkExtensions" default="build" basedir=".">

  <patternset id="source-files">
    <include name="AssemblyInfo.cs"/>
    <include name="MaxTimeAttribute.cs"/>
    <include name="RepeatAttribute.cs"/>
    <include name="RowTest/RowAttribute.cs"/>
    <include name="RowTest/RowTestAttribute.cs"/>
    <include name="RowTest/SpecialValue.cs"/>
    <include name="Xml/XmlConstraint.cs"/>
  </patternset>

  <target name="build">
    <csc target="library" 
        output="${current.lib.dir}/nunit.framework.extensions.dll"
        debug="${build.debug}" define="${build.defines}">
      <sources>
        <patternset refid="source-files"/>
        <include name="../../CommonAssemblyInfo.cs"/>
      </sources>
      <resources  prefix="NUnit.Framework.Extensions.Xml">
        <include name="XML/xmlDiff.xslt"/>
      </resources>
      <nowarn>
        <warning number="1699" if="${runtime.version=='2.0'}"/>
      </nowarn>
      <references basedir="${current.lib.dir}">
        <include name="nunit.framework.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/NUnitExtensions/framework">
      <fileset>
        <patternset refid="source-files"/>
        <include name="XML/xmlDiff.xslt"/>
        <include name="nunit.framework.extensions.build"/>
      </fileset>
    </copy>
  </target>

</project>