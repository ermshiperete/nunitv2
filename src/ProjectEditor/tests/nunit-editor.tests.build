<?xml version="1.0"?>
<project name="NUnitEditorTests" default="build" basedir=".">

  <patternset id="source-files">
    <include name="Model/ExistingProjectTests.cs"/>
    <include name="Model/NewProjectTests.cs"/>
    <include name="Model/NUnitProjectLoadXmlTests.cs"/>
    <include name="Model/NUnitProjectSave.cs"/>
    <include name="Model/NUnitProjectXml.cs"/>
    <include name="Presenters/ProjectPresenterTests.cs"/>
  </patternset>

  <target name="build">
    <csc target="library" 
        output="${current.test.dir}/nunit-editor.tests.dll" 
        debug="${build.debug}" define="${build.defines}">
      <sources>
        <patternset refid="source-files"/>
      </sources>
      <references>
        <include name="System.Windows.Forms.dll"/>
	      <include name="System.Drawing.dll"/>
        <include name="System.Xml.dll"/>
        <include name="${current.framework.dir}/nunit.framework.dll"/>
        <include name="${current.lib.dir}/Rhino.Mocks.dll"/>
        <include name="${current.build.dir}/nunit-editor.exe"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/GuiRunner/tests">
      <fileset>
        <patternset refid="source-files"/>
        <include name="nunit-editor.tests.csproj"/>
        <include name="nunit-editor.tests.build"/>
      </fileset>
    </copy>
  </target>

</project>