<?xml version="1.0"?>
<project name="PNUnitAgent" default="build" basedir=".">

  <patternset id="source-files">
        <include name="agent.cs"/>
        <include name="AgentConfig.cs"/>
        <include name="AssemblyInfo.cs"/>
        <include name="PNUnitTestRunner.cs"/>
  </patternset>

  <target name="build">
    <csc target="exe"
        output="${current.build.dir}/pnunit-agent.exe"
        debug="${build.debug}" 
        define="${build.defines}">
      <sources basedir=".">
        <patternset refid="source-files"/>
      </sources>
      <references>
        <include name="System.Runtime.Remoting.dll"/>
	<include name="${current.lib.dir}/pnunit.framework.dll"/>
        <include name="${current.build.dir}/nunit.core.dll"/>
        <include name="${current.build.dir}/nunit.core.interfaces.dll"/>
        <include name="${current.build.dir}/nunit.util.dll"/>
        <include name="${current.build.dir}/log4net.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/PNUnit/agent">
      <fileset>
        <patternset refid="source-files"/>
        <include name="App.ico"/>
        <include name="pnunit-agent.build"/>
      </fileset>
    </copy>
  </target>

</project>
